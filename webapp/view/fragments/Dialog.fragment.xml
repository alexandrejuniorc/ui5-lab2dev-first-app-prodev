<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
>
    <m:Dialog
        id="helloDialog"
        title="My Dialog"
    >
        <m:content>
            <m:VBox class="sapUiSmallMargin">
                <m:Text text="Hello World!" />
                <m:Button
                    text="Close"
                    press="onCloseDialog"
                />
            </m:VBox>
        </m:content>
    </m:Dialog>
</core:FragmentDefinition>
