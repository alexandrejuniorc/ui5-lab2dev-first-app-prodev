<mvc:View
    controllerName="com.lab2dev.firstapp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <List
            id="_IDGenList1"
            headerText="Products"
            headerLevel="H2"
            items="{products>/}"
        >
            <StandardListItem
                id="_IDGenStandardListItem1"
                type="Active"
                press="onPress"
                icon="{products>index}"
                title="{products>title}"
                counter="{products>counter}"
            />
        </List>
    </Page>
</mvc:View>
