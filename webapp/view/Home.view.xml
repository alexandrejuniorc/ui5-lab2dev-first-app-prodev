<mvc:View
    controllerName="com.lab2dev.firstapp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <List
            id="_IDGenList1"
            headerText="Products"
            headerLevel="H2"
            items="{products>/}"
        >
            <ObjectListItem
                id="_IDGenObjectListItem1"
                title="{products>ProductName}"
                number="{products>UnitPrice}"
                numberUnit="USD"
            >
                <firstStatus>
                    <ObjectStatus
                        id="_IDGenObjectStatus1"
                        text="{products>Discontinued}"
                        state="Success"
                    />
                </firstStatus>
            </ObjectListItem>
        </List>
    </Page>
</mvc:View>
